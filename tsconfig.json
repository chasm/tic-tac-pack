{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "module": "es2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": { "*": ["types/*"] },
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2020",
    "traceResolution": false,
    "types": ["mocha"]
  },
  "exclude": [
    "build",
    "node_modules/*",
    "dist",
    "package.json",
    "tsconfig.json",
    "public/*",
    ".history"
  ],
  "include": ["src", "types"]
}
