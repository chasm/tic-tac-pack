{
  "name": "tic-tac-pack",
  "version": "0.1.0",
  "private": true,
  "author": "Charles F. Munat <charles.munat@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "snowpack build",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "start": "snowpack dev",
    "test": "web-test-runner 'src/**/*.test.{ts,tsx}' --node-resolve",
    "test:cov": "web-test-runner 'src/**/*.test.{ts,tsx}' --node-resolve --coverage",
    "test:cov:watch": "web-test-runner 'src/**/*.test.{ts,tsx}' --node-resolve --coverage --watch",
    "test:watch": "web-test-runner 'src/**/*.test.{ts,tsx}' --node-resolve --watch"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/plugin-typescript": "^1.2.0",
    "@snowpack/web-test-runner-plugin": "^0.2.0",
    "@testing-library/react": "^11.0.0",
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/snowpack-env": "^2.3.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@web/test-runner": "^0.12.0",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.22.0",
    "import-sort": "^6.0.0",
    "import-sort-config": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.0.5",
    "snowpack": "^3.0.1",
    "typescript": "^4.0.0",
    "watch": "^1.0.2"
  }
}
